#include <stdio.h>

int main() {
 int i,j,rows;
 int count = 0;
  printf("enter the number  of rows\n");
  scanf("%d",&rows);
  
  for(i = 1; i <= rows; i++)
  {
      for(j = 1; j <= i; j++ )
    if(j==1 || j==i || i==rows)
        
      
      printf("%d ",j);
    else 
    printf("  ");
      
      printf("\n");
  }
    return 0;
}
