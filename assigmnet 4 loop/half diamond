#include <stdio.h>

int main()
{
  int size;
  printf("enter the size\n");
  scanf("%d",&size);
  
  for(int i = 1; i<=size; i++){
      for(int j = 1; j<=i; j++){
      printf("*");}
   printf("\n");     }
  
   for(int i = size-1; i>=1; i--){
      for(int j = 1; j <= i; j++){
        
        printf("*");
      }
    
       printf("\n");
   }
        }
        
          
          
    
        
          
