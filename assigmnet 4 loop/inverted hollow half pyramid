int main() {
 int i,j,rows;
 int count = 0;
  printf("enter the number  of rows\n");
  scanf("%d",&rows);
  
  for(i = 1; i <= rows; i++)
  {
      for(j = 1; j <= rows; j++ )
    if( i==1 || j+i== rows || j==1)
        
      
      printf("%d ",j);
    else 
    printf("   ");
      
      printf("\n");
  }
    return 0;
}
