



#include <stdio.h>
#include <math.h>

int  main()
{
    int binary,s=0,i=0;
 
    printf("Enter a binary number(1s and 0s) \n");
    scanf("%d", &binary); 
    
    while (binary)
    {
        s=s+pow(2,i) * (binary%10);
        binary = binary /10;
        i++;
    }
  
    printf("The Binary number is = %d \n", binary);
    printf("Its decimal equivalent is = %d \n", s);
}
