


#include <stdio.h>

int main() {
    int sum = 0,input;
    printf("enter the time\n");
    scanf("%d",&input);
    
    if(input>=10){
         sum = (3*100) + (150*4) + (250*3) + (input-10)*500;
          printf("money to be deposit %d",sum);
    }
    else if(input >7)
     {    sum =  (3*100) + (150*4) + (input-7)* 250;
          printf("money to be deposit %d",sum);
     }
    else if(input >3)
      {  sum =  (3*100) + (input - 3)*150;
      printf("money to be deposit %d",sum);
      }
     else if(input <= 3)
     {
         sum = 100*input;
         printf("money to be deposit %d",sum);
     }
     return 0;
}
